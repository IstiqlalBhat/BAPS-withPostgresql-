<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Authentication Status" Height="280" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Authentication Status" FontWeight="Bold" FontSize="18" Margin="0,0,0,15" HorizontalAlignment="Center"/>

        <!-- Status Indicator -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Ellipse x:Name="status_indicator" Grid.Column="0" Width="15" Height="15" Margin="0,2,10,0" VerticalAlignment="Top"/>
            <StackPanel Grid.Column="1">
                <TextBlock x:Name="status_text" FontWeight="Bold" FontSize="13" Margin="0,0,0,3"/>
                <TextBlock x:Name="status_detail" FontSize="11" Foreground="#666"/>
            </StackPanel>
        </Grid>

        <!-- User Information -->
        <Border x:Name="user_info_border" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12" Margin="0,0,0,15" CornerRadius="4" Background="#F9F9F9">
            <StackPanel>
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Email:" FontWeight="SemiBold" FontSize="11" Foreground="#666" Margin="0,0,0,2"/>
                    <TextBlock x:Name="email_text" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel Margin="0,0,0,0">
                    <TextBlock Text="Role:" FontWeight="SemiBold" FontSize="11" Foreground="#666" Margin="0,0,0,2"/>
                    <TextBlock x:Name="role_text" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Token Status -->
        <TextBlock x:Name="token_status" Text="" FontSize="10" Foreground="#666" Margin="0,0,0,15" TextWrapping="Wrap"/>

        <!-- Buttons -->
        <Button x:Name="logout_btn" Content="Logout" Height="35" FontWeight="SemiBold" Background="#DC3545" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,0,8" IsEnabled="False"/>
        <Button x:Name="close_btn" Content="Close" Height="30" FontWeight="SemiBold" Background="#6C757D" Foreground="White" BorderThickness="0" Cursor="Hand"/>
    </StackPanel>
</Window>
